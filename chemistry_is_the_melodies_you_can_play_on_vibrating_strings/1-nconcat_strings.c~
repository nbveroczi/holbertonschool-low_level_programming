#include "1-nconcat_strings.h" 
/* This is a function that concatenates two strings. */

char *nconcat_strings(char *dest, const char *src, int n)
{
    size_t dest_len = strlen(dest);
    size_t i;

   for (i = 0 ; i < n && src[i] != '\0' ; i++)
        dest[dest_len + i] = src[i];
    dest[dest_len + i] = '\0';

   return dest;
}
